# API server
PORT=3001

# Database
# Example: postgres://USER:PASSWORD@HOST:PORT/DB
DATABASE_URL=postgres://portfolio:portfolio@localhost:5432/portfolio

# Admin auth
JWT_SECRET=change-me
ADMIN_EMAIL=admin@example.com
# bcrypt hash for your admin password (generate with bcryptjs)
ADMIN_PASSWORD_HASH=$2a$12$replace_with_bcrypt_hash

# CORS
